<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        >
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/temperature"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"

            android:progressDrawable="@drawable/temperature_progress">
        </androidx.core.widget.ContentLoadingProgressBar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/temp"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="40dp"
            android:textColor="@color/black"
            android:textSize="20dp"/>

    </FrameLayout>
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        >
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/humidity"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"

            android:progressDrawable="@drawable/humidity_progress">
        </androidx.core.widget.ContentLoadingProgressBar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:id="@+id/hum"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="60dp"
            android:textColor="@color/black"
            android:textSize="20dp"/>

    </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="135dp"
            android:layout_height="200dp">

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/nitrogen"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"

                android:progressDrawable="@drawable/nitrogen_progress"></androidx.core.widget.ContentLoadingProgressBar>

            <TextView
                android:id="@+id/N"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="35dp"
                android:layout_marginBottom="15dp"
                android:text="Nitrogen"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="135dp"
            android:layout_height="200dp">

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/phosphorus"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"

                android:progressDrawable="@drawable/phosphorus_progress"></androidx.core.widget.ContentLoadingProgressBar>

            <TextView
                android:id="@+id/P"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="15dp"
                android:text="Phosphorus"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="135dp"
            android:layout_height="200dp">

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/potassium"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/potassium_progress"></androidx.core.widget.ContentLoadingProgressBar>

            <TextView
                android:id="@+id/K"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:text="Potassium"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </FrameLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp">

            <com.github.lzyzsd.circleprogress.CircleProgress
                android:id="@+id/watercpb"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                android:layout_marginStart="50dp"
                android:text="Water Level"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp">
            <com.github.lzyzsd.circleprogress.ArcProgress
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/phARC"
                android:layout_gravity="center"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                android:layout_marginStart="90dp"
                android:text="PH
"
                android:textColor="@color/black"
                android:textSize="20dp" />


        </FrameLayout>


    </LinearLayout>











</LinearLayout>




